<view class="container">
  <scroll-view scroll-y>
    <view class="top-box">
      <view class="top-info weui-flex">
        <view class="top-info__item location">{{ locationInfo.location }}</view>
        <view class="top-info__item weather">
          {{ weather }}
          <text class="iconfont {{ weatherClass }}"></text>
        </view>
      </view>
      <view class="top-search">
        <button class="weui-btn" type="default">
          <icon type="search" color="#707070" />
          搜索商家、商品名称
        </button>
      </view>
    </view>
  </scroll-view>
</view>