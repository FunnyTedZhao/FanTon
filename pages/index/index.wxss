/* 顶部盒子 */
.top-box {
  background-color: #ff9000;
  padding: 0 20rpx;
}
/* 信息 */
.top-info {
  flex-wrap: nowrap;
  justify-content: space-between;
}
.top-info__item {
  line-height: 72rpx;
  height: 72rpx;
  width: 290rpx;
  font-size: 36rpx;
  color: #ffffff;
}
.top-info__item.weather {
  text-align: right;
}

/* 分类 */
.classification-box {
  padding: 0 20rpx;
}
.classification-screen {
  overflow: hidden;
}
.classification-screen__wrap {
  width: 100vm;
  flex-wrap: wrap;
}
.classification-screen__item {
  min-width: 160rpx;
  text-align: center;
  font-size: 22rpx;
  color: #7F8389;
}