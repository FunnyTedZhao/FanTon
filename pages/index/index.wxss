/* 顶部盒子 */
.top-box {
  background-color: #ff9000;
  padding: 0 20rpx;
}
/* 信息 */
.top-info {
  flex-wrap: nowrap;
  justify-content: space-between;
}
.top-info__item {
  line-height: 72rpx;
  height: 72rpx;
  width: 290rpx;
  font-size: 36rpx;
  color: #ffffff;
}
.top-info__item.weather {
  text-align: right;
}

/* 分类 */
.classification-box {
  background-color: #ffffff;
}
.classification-group {
  overflow: hidden;
  padding: 10rpx 20rpx 0;
}
.classification-item {
  float: left;
  width: 25%;
  text-align: center;
  font-size: 20rpx;
  color: #888888;
  margin: 10rpx 0;
}

/* Banner */
.banner-box {
  margin: 10rpx 0;
}